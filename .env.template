# Azure AI Foundry Configuration Template
# Copy this file to .env and fill in your actual values

# Azure AI Foundry Endpoint (your model deployment endpoint)
AZURE_AI_ENDPOINT=https://your-foundry-endpoint.region.inference.ml.azure.com

# Azure AI API Key (from your Foundry deployment)
AZURE_AI_KEY=your-azure-ai-key-here

# Model Deployment Name (the name you gave your model in Foundry)
AZURE_AI_MODEL=your-model-deployment-name

# Optional: Alternative endpoints for different models
AZURE_AI_GPT4_ENDPOINT=https://your-gpt4-endpoint.region.inference.ml.azure.com
AZURE_AI_GPT4_KEY=your-gpt4-key-here
AZURE_AI_GPT4_MODEL=gpt-4o

# Application Settings
APP_NAME=Mission Alpha - Operation Synthetic Shield
APP_VERSION=1.0
ENABLE_AZURE_AI=true
FALLBACK_TO_DEMO=true

# Data Generation Settings
DEFAULT_MEMBER_COUNT=1000
MAX_MEMBER_COUNT=5000
DEFAULT_CONTRIBUTION_MONTHS=12
